<Page x:Class="TCSimplified2.Pages.AdminHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TCSimplified2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TCS Admin Config" FontFamily="Poppins">

    <Border CornerRadius="8" Background="{DynamicResource QuaternaryBackgroundColor}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Content="Home" Foreground="{DynamicResource SecondaryBlueColor}" FontSize="15" FontStyle="Italic" FontWeight="Bold" Margin="5 -20 0 0"/>

            <StackPanel>
                <TextBlock Text="Employees" HorizontalAlignment="Center" FontSize="20" TextDecorations="Underline" Foreground="CornflowerBlue" FontWeight="Bold" />
                <Button Name="Add_Employee" Click="AddEmployee_Click" Style="{DynamicResource ProButtonStyle}" Content="Add Employee..." FontSize="18" Height="45" Width="220" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 5 0 0" />
                <Button Name="Remove_Employee" Click="RemoveEmployee_Click" Style="{DynamicResource ProButtonStyle}" Content="Remove Employee..." FontSize="18" Height="45" Width="220" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 5 0 0" />
                <Button Name="View_Employee" Click="ViewEmployee_Click" Style="{DynamicResource ProButtonStyle}" Content="All Employee Info..." FontSize="18" Height="45" Width="220" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 5 0 0" />
                <Button Name="Writeups" Click="Writeups_Click" Style="{DynamicResource ProButtonStyle}" Content="Write Ups" FontSize="18" Height="45" Width="220" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20 5 0 0" />
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Admin Settings" HorizontalAlignment="Center" FontSize="20" TextDecorations="Underline" Foreground="CornflowerBlue" FontWeight="Bold" />
                <Button Name="AdminLogin" Click="AdminLogin_Click" Style="{DynamicResource ProButtonStyle}" Content="Admin Logins" FontSize="18" Height="45" Width="220" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 5 0 0" />
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBlock Text="Legal" HorizontalAlignment="Center" FontSize="20" TextDecorations="Underline" Foreground="CornflowerBlue" FontWeight="Bold" />
                <Button Name="LegalDisclaimer" Click="Disclaimer_Click" Style="{DynamicResource ProButtonStyle}" Content="Legal Disclaimer" FontSize="18" Height="45" Width="220" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 5 0 0" />
            </StackPanel>
        </Grid>
    </Border>
</Page>
